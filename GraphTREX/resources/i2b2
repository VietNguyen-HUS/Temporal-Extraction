        "code_dict = {\"&quot;\": '_quot_',\n",
        "                \"&amp;\": \"_amp_\",\n",
        "                \"&gt;\": \"_gt_\",\n",
        "                \"&lt;\":\"_lt_\",\n",
        "               \"&apos;\":'_apos_'}\n",
        "symbol_dict = {\"&\":\"_amp_\",\n",
        "                '\"':\"_quot_\",\n",
        "                \"<\": \"_lt_\",\n",
        "                \">\": \"_gt_\",\n",
        "                \"'\":\"_apos_\"}\n",
        "reverse_dict = {item:key for key, item in symbol_dict.items()}# \"_amp_\":\"&\" etc\n",
        "reverse_dict.update({key: reverse_dict[item] for key, item in code_dict.items()})\n",
        "reverse_dict"
      ],
